[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml, *.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2
quote_type = single

[*.{css,scss,less}]
indent_size = 2

[*.html]
indent_size = 2
